<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TorWithArti" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purpleDark</item>
        <item name="colorPrimaryVariant">@color/purpleNormal</item>
        <item name="colorOnPrimary">@color/textOnPrimary</item>
        <!-- Secondary brand color(same as primary in our case). -->
        <item name="colorSecondary">@color/purpleDark</item>
        <item name="colorSecondaryVariant">@color/purpleNormal</item>
        <item name="colorOnSecondary">@color/textOnPrimary</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor" >@color/purpleDark</item>

        <!-- Customize your theme here. -->
    </style>
</resources>