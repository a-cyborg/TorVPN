<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TorVPN" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purpleDark</item>
        <item name="colorPrimaryVariant">@color/purpleNormal</item>
        <item name="colorOnPrimary">@color/textOnPrimary</item>
        <!-- Secondary brand color(same as primary in our case). -->
        <item name="colorSecondary">@color/purpleDark</item>
        <item name="colorSecondaryVariant">@color/purpleNormal</item>
        <item name="colorOnSecondary">@color/textOnPrimary</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@color/purpleDark</item>

        <item name="actionMenuTextColor">@color/tertiary</item>
        <item name="android:actionMenuTextColor">@color/tertiary</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TorVPN.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TorVPN.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TorVPN.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>