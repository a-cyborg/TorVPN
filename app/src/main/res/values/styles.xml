        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="subtitle_in_fragment" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">@color/colorSubtitle</item>
    </style>

    <style name="button_text_in_fragment" parent="TextAppearance.MaterialComponents.Body1">
