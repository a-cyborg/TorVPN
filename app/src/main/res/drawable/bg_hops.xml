<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- first segment -->
    <item android:bottom="60dp">
        <shape android:shape="oval">
            <size android:height="10dp" android:width="10dp"/>
            <solid android:color="@color/greenDarkShade"/>
        </shape>
    </item>

   <item android:bottom="48dp" android:top="8dp" android:left="4dp" android:right="4dp" >
        <shape android:shape="rectangle">
            <size android:width="2dp" android:height="10dp"/>
            <solid android:color="@color/greenDarkShade"/>
        </shape>
    </item>

    <!-- 2. segment -->
    <item android:bottom="40dp" android:top="20dp">
        <shape android:shape="oval">
            <stroke android:color="@color/greenDarkShade"
                android:width="2dp" />
            <size android:height="10dp" android:width="10dp"/>
        </shape>
    </item>

   <item android:bottom="28dp" android:top="28dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <size android:width="2dp" android:height="10dp"/>
            <solid android:color="@color/greenDarkShade"/>
        </shape>
    </item>

    <!-- 3. segment -->
    <item android:bottom="20dp" android:top="40dp">
        <shape android:shape="oval">
            <stroke android:color="@color/greenDarkShade"
                android:width="2dp" />
            <size android:height="10dp" android:width="10dp"/>
        </shape>
    </item>

   <item android:bottom="8dp" android:top="48dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <size android:width="2dp" android:height="10dp"/>
            <solid android:color="@color/greenDarkShade"/>
        </shape>
    </item>

    <!-- 4. segment -->
    <item android:top="60dp">
        <shape android:shape="oval">
            <stroke android:color="@color/greenDarkShade"
                android:width="2dp" />
            <size android:height="10dp" android:width="10dp"/>
        </shape>
    </item>

</layer-list>