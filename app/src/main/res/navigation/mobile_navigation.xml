<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_connect">

    <!--    <include app:graph="@navigation/connect_navigation"/>-->

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.torwitharti.ui.dashboard.DashboardFragment"
        android:label="@string/nav_support"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.torwitharti.ui.notifications.NotificationsFragment"
        android:label="@string/nav_settings"
        tools:layout="@layout/fragment_notifications" />


    <fragment
        android:id="@+id/navigation_connect"
        android:name="com.example.torwitharti.ui.home.ConnectFragment"
        android:label="@string/nav_connect"
        tools:layout="@layout/fragment_connect">
        <action
            android:id="@+id/action_connectFragment_to_appRoutingFragment"
            app:destination="@id/appRoutingFragment" />
        <action
            android:id="@+id/action_connectFragment_to_reportFragment"
            app:destination="@id/reportFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/appRoutingFragment"
        android:name="com.example.torwitharti.ui.approuting.AppRoutingFragment"
        android:label="AppRoutingFragment"
        tools:layout="@layout/fragment_app_routing" />
    <fragment
        android:id="@+id/reportFragment"
        android:name="com.example.torwitharti.ui.home.ReportFragment"
        android:label="ReportFragment"
        tools:layout="@layout/fragment_report" />
</navigation>