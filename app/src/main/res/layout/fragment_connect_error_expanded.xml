<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.torwitharti.ui.home.ConnectFragmentViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/connect_error_collapse_bg"
        android:clipToPadding="false"
        android:padding="16dp"
        android:layout_margin="16dp"
        tools:context=".ui.home.ConnectFragment">

        <ImageView
            android:id="@+id/iv_connect_status_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_not_connected" />


        <View
            android:id="@+id/view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_blue_bright"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_connect_status_icon"
            app:layout_constraintEnd_toEndOf="@+id/iv_connect_status_icon"
            app:layout_constraintStart_toStartOf="@+id/iv_connect_status_icon"
            app:layout_constraintTop_toTopOf="@+id/iv_connect_status_icon" />

        <TextView
            android:id="@+id/tv_connect_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/frag_connect_cannot_connected"
            android:textAppearance="@style/info_error_dialog_expanded_title"
            app:layout_constraintStart_toStartOf="@+id/iv_connect_status_icon"
            app:layout_constraintTop_toBottomOf="@+id/iv_connect_status_icon" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:ems="14"
            android:text="@string/frag_connect_error_content"
            android:textAppearance="@style/info_error_dialog_expanded_info1"
            app:layout_constraintStart_toStartOf="@+id/tv_connect_status_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_connect_status_title" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/frag_connect_error_content2"
            android:textAppearance="@style/info_error_dialog_expanded_info2"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/textView13"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            app:srcCompat="@drawable/ic_location" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/frag_connect_error_share_location"
            android:textAppearance="@style/info_error_dialog_expanded_location_title"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView11"
            style="@style/action_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{()->viewModel.notNowInExpandedErrorClicked()}"
            android:text="@string/frag_connect_error_not_now"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView12"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView12"
            style="@style/action_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag_connect_error_try_a_bridge"
            app:layout_constraintBottom_toBottomOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toTopOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag_connect_error_allow_once"
            android:textAppearance="@style/info_error_dialog_expanded_location_subtitle"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
