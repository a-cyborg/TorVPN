<layout xmlns:android="http://schemas.android.com/apk/res/android">
   <data>
      <variable name="viewModel" type="org.torproject.vpn.ui.appearancesettings.model.WallpaperModel"/>
   </data>
   <androidx.constraintlayout.widget.ConstraintLayout
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       tools:background="@color/indigo70"
       xmlns:tools="http://schemas.android.com/tools">
      <androidx.cardview.widget.CardView
          android:id="@+id/cv_image_container"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:cardBackgroundColor="@color/purpleDark"
          app:cardElevation="0dp"
          app:cardUseCompatPadding="true"
          app:cardCornerRadius="12dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent">
         <androidx.appcompat.widget.AppCompatImageView
             android:id="@+id/iv_wallpaper"
             android:layout_width="90dp"
             android:layout_height="160dp"
             android:scaleType="fitXY"
             />
      </androidx.cardview.widget.CardView>

      <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/iv_selected_icn"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/ic_check_circle"
          app:layout_constraintStart_toStartOf="@id/cv_image_container"
          app:layout_constraintTop_toBottomOf="@+id/cv_image_container"
          app:layout_constraintHorizontal_chainStyle="packed"
          android:layout_marginBottom="5dp"
          android:layout_marginHorizontal="4dp"
          tools:visibility="visible"
          android:visibility="gone"
          />

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tv_wallpaper_description"
          android:layout_width="0dp"
          android:layout_height="40dp"
          app:layout_constraintTop_toBottomOf="@id/cv_image_container"
          app:layout_constraintStart_toEndOf="@id/iv_selected_icn"
          app:layout_constraintEnd_toEndOf="@id/cv_image_container"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintHorizontal_chainStyle="packed"
          style="@style/text_body_small"
          android:text="Onionverse"
          android:maxLines="2"
          android:ellipsize="end"
         />
   </androidx.constraintlayout.widget.ConstraintLayout>
</layout>