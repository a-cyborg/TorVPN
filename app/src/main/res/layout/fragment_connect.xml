<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.torwitharti.ui.home.model.ConnectFragmentViewModel" />

        <import type="android.view.View" />

        <import type="com.example.torwitharti.vpn.ConnectionState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.ConnectFragment">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/purpleDark"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@{viewModel.toolBarTitleAndColor.first}"
            app:titleCentered="true"
            app:titleTextColor="@{viewModel.toolBarTitleAndColor.second}" />


        <View
            android:id="@+id/progress_slider"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:background="@drawable/gradient_progress"
            android:visibility="@{viewModel.connectionState == ConnectionState.INIT? View.INVISIBLE: View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />


        <!--This is for the glow above and below progressbar-->
        <View
            android:id="@+id/progress_upper_glow"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toTopOf="@+id/progress_slider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="gone" />

        <View
            android:id="@+id/progress_lower_glow"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_slider" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bg_stars"
            tools:visibility="visible" />

        <include
            android:id="@+id/include_help"
            layout="@layout/include_guide_frame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="@{viewModel.connectionState == ConnectionState.INIT ? View.VISIBLE: View.GONE}"
            app:layout_constraintBottom_toTopOf="@+id/tv_connect_action_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_slider"
            tools:visibility="visible" />

        <include
            android:id="@+id/include_error"
            layout="@layout/include_error_frame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="@{viewModel.connectionState == ConnectionState.CONNECTION_ERROR ? View.VISIBLE: View.GONE}"
            app:layout_constraintBottom_toTopOf="@+id/tv_connect_action_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_slider"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/tv_connect_action_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/av_connect_to_pause"
            android:clickable="true"
            android:elevation="0dp"
            android:focusable="true"
            android:gravity="center"
            android:onClick="@{()->viewModel.connectStateButtonClicked()}"
            android:text="@{viewModel.connectButtonText}"
            android:textAppearance="@style/button_text_connect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <!--        <ImageView-->
        <!--            android:id="@+id/iv_connect_btn_overlay"-->
        <!--            tools:visibility="gone"-->
        <!--            android:visibility="gone"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            app:layout_constraintBottom_toBottomOf="@+id/tv_connect_action_btn"-->
        <!--            app:layout_constraintEnd_toEndOf="@+id/tv_connect_action_btn"-->
        <!--            app:layout_constraintStart_toStartOf="@+id/tv_connect_action_btn"-->
        <!--            app:layout_constraintTop_toTopOf="@+id/tv_connect_action_btn"-->
        <!--            app:srcCompat="@drawable/av_pause_to_stop" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
