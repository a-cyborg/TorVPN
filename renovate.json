{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchManagers": ["gradle", "gradle-wrapper"],
      "excludePackagePatterns": [
        "^androidx\\:",
        "^org\\.jetbrains\\.kotlinx\\:",
        "^gradle$",
        "^com\\.android\\:",
        "^org\\.jetbrains\\.kotlin\\:"
      ],
      "enabled": true,
      "automerge": false
    },
    {
      "matchManagers": ["gitlabci", "dockerfile"],
      "enabled": true,
      "automerge": true
    }
  ]
}
